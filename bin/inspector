#!/usr/bin/env php
<?php

declare(strict_types=1);

function includeIfExists(string $filePath): bool
{
    if (file_exists($filePath)) {
        include $filePath;
        return true;
    }

    return false;
}

if (
    !includeIfExists(__DIR__ . '/../../../autoload.php') &&
    !includeIfExists(__DIR__ . '/../vendor/autoload.php')
) {
    throw new RuntimeException('Could not find autoloaded classes as vendor or main project.');
}

use Symfony\Component\Console\Application;
use TravisPhpstormInspector\Commands\InspectCommand;

$application = new Application();

$application->add(new InspectCommand());

$application->run();
